{
  "name": "@dvcol/about-me",
  "type": "module",
  "version": "1.1.3",
  "author": "dvcol",
  "homepage": "https://github.com/dvcol/about-me",
  "repository": {
    "type": "git",
    "url": "https://github.com/dvcol/about-me.git"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">= 7"
  },
  "main": "./dist/entry/index.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "*.md",
    "LICENSE",
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepare": "husky install",
    "dev:web": "pnpm run build:theme && VITE_WEB=true vite",
    "dev": "pnpm run build:theme && vite",
    "build": "pnpm run build:theme && vite build",
    "build:theme": "pnpm run build:theme:light && pnpm run build:theme:dark",
    "build:theme:light": "smui-theme compile src/styles/smui-light.css -i src/theme/light -i ./node_modules",
    "build:theme:dark": "smui-theme compile src/styles/smui-dark.css -i src/theme/dark -i ./node_modules",
    "serve": "pnpm run build && vite preview",
    "test:unit": "vitest run --environment jsdom --coverage",
    "test:watch": "vitest --environment jsdom",
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix",
    "style": "stylelint src/**/*.{css,scss,less,html,svelte,svx}",
    "style:fix": "yarn style --fix",
    "release": "standard-version",
    "release:changelog": "extract-changelog-release > RELEASE.md"
  },
  "dependencies": {
    "d3": "^7.8.4",
    "line-md": "^0.2.10",
    "svelte": "^4.0.5",
    "svelte-i18n": "^3.7.0",
    "svelte-material-ui": "^7.0.0-beta.14",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@dvcol/eslint-plugin-presets": "^1.3.7",
    "@dvcol/stylelint-plugin-presets": "^1.2.0",
    "@dvcol/vite-plugin-i18n": "^1.1.3",
    "@poppanator/sveltekit-svg": "^4.0.0",
    "@smui/chips": "7.0.0-beta.14",
    "@sveltejs/vite-plugin-svelte": "^2.4.2",
    "@tsconfig/svelte": "^5.0.0",
    "@types/d3": "^7.4.0",
    "@types/node": "^20.4.1",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "eslint": "^8.40.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-svelte": "^2.32.2",
    "extract-changelog-release": "^1.0.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "postcss": "^8.4.23",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.8",
    "prettier-plugin-svelte": "^2.10.1",
    "sass": "^1.62.1",
    "smui-theme": "^7.0.0-beta.14",
    "standard-version": "^9.5.0",
    "stylelint": "^15.6.1",
    "stylelint-config-recommended-scss": "^11.0.0",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-scss": "^5.0.0",
    "svelte-preprocess": "^5.0.4",
    "tslib": "^2.6.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.2",
    "vite-plugin-dts": "^2.3.0",
    "vite-plugin-i18n-resources": "^1.0.3",
    "vitest": "^0.33.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": [
      "eslint --fix"
    ],
    "*.{css,scss,less}": [
      "stylelint --fix"
    ]
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/plugin-syntax-flow",
        "@babel/plugin-transform-react-jsx"
      ],
      "allowedVersions": {
        "stylelint": ">=15"
      }
    }
  }
}
