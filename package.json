{
  "name": "@dvcol/about-me",
  "type": "module",
  "version": "1.1.1",
  "author": "dvcol",
  "homepage": "https://github.com/dvcol/about-me",
  "repository": {
    "type": "git",
    "url": "https://github.com/dvcol/about-me.git"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">= 7"
  },
  "main": "./dist/entry/index.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "*.md",
    "LICENSE",
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepare": "husky install",
    "dev:wc": "VITE_WEB_COMPONENT=true vite",
    "dev": "vite",
    "build": "vite build",
    "serve": "pnpm run build && vite preview",
    "test:unit": "vitest run --environment jsdom --coverage",
    "test:watch": "vitest --environment jsdom",
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix",
    "style": "stylelint src/**/*.{css,scss,less,html}",
    "style:fix": "yarn style --fix",
    "release": "standard-version",
    "release:changelog": "extract-changelog-release > RELEASE.md"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.0",
    "@commitlint/config-conventional": "^17.4.4",
    "@dvcol/eslint-plugin-presets": "^1.3.6",
    "@dvcol/stylelint-plugin-presets": "^1.1.5",
    "@dvcol/vite-plugin-i18n": "^1.1.2",
    "@sveltejs/vite-plugin-svelte": "^2.0.3",
    "@tsconfig/svelte": "^3.0.0",
    "@types/node": "^18.15.5",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.36.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "extract-changelog-release": "^1.0.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.7",
    "sass": "^1.59.3",
    "standard-version": "^9.5.0",
    "stylelint": "^15.3.0",
    "svelte": "^3.55.1",
    "svelte-check": "^2.10.3",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5",
    "vite": "^4.2.1",
    "vite-plugin-dts": "^2.2.0",
    "vite-plugin-i18n-resources": "^1.0.3",
    "vitest": "^0.29.7"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": [
      "eslint --fix"
    ],
    "*.{css,scss,less}": [
      "stylelint --fix"
    ]
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/plugin-syntax-flow",
        "@babel/plugin-transform-react-jsx"
      ],
      "allowedVersions": {
        "stylelint": ">=15"
      }
    }
  }
}
